#dashboard .jumbotron {
    height: 30vh;
    position: relative;
    background: url(../../assets/tips/dashboard-bg.jpg);
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
    flex-direction: column;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
    justify-content: center
}

#dashboard .jumbotron .member {
    min-width: .6rem;
    color: #fff;
    text-align: center
}

#dashboard .jumbotron .member .nick-name {
    word-break: keep-all;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    width: 36%;
    text-align: center;
    color: #FFF;
    font-size: .13rem;
    display: inline-block;
    color: #FFF
}

#dashboard .jumbotron .member img {
    display: block;
    width: .6rem;
    height: .6rem;
    margin: 0 auto .05rem;
    border-radius: 50%
}

#dashboard .jumbotron .member i {
    // background: url(../images/clipboard.png) center center no-repeat;
    width: .16rem;
    height: .16rem;
    background-size: contain;
    display: inline-block;
    vertical-align: middle;
    margin-left: .04rem
}

#dashboard .list-group {
    background: white;
    padding: 0;
    margin: 0 0 .3rem;
    list-style: none;
    border-top: 1px solid #dedede;
    border-bottom: 1px solid #dedede
}

#dashboard .list-group.with-icon .icon {
    padding: .07rem .06rem;
    background: red;
    border-radius: 8px;
    width: .25rem;
    height: .25rem;
    color: white;
    font-size: inherit;
    text-align: center;
    margin: .1rem;
    float: left
}

#dashboard .list-group.with-icon .my-order .icon {
    background-color: #fb81c9
}

#dashboard .list-group.with-icon .my-film .icon {
    background-color: #ff5400
}

#dashboard .list-group.with-icon .my-card .icon {
    background-color: #71bf62
}

#dashboard .list-group.with-icon .my-wallet .icon {
    background-color: #35b87f
}

#dashboard .list-group.with-icon .my-integral .icon {
    background-color: #ffa200
}

#dashboard .list-group.with-icon .my-favorite .icon {
    background-color: #f26d5f
}

#dashboard .list-group.with-icon .my-address .icon {
    background-color: #b97cf2
}

#dashboard .list-group.with-icon .my-password .icon {
    background-color: #5b99ee
}

#dashboard .list-group .list-group-item {
    display: block;
    overflow: hidden;
    color: #333;
    text-decoration: none;
    position: relative
}

#dashboard .list-group .list-group-item .list-title {
    display: block;
    margin-left: .4rem;
    border-bottom: 1px solid #dedede;
    line-height: .25rem;
    padding: .1rem 0;
    position: relative
}

#dashboard .list-group .list-group-item .list-title .listnum {
    display: inline-block;
    font-style: normal;
    font-size: .12rem;
    width: .18rem;
    height: .18rem;
    line-height: .18rem;
    background: #ff5400;
    color: #fff;
    border-radius: 50%;
    text-align: center;
    position: absolute;
    right: .3rem;
    top: .14rem
}

#dashboard .list-group .list-group-item .list-title i{
    background: url(../../assets/tips/right.png) no-repeat center top
    background-size cover
    position absolute
    width .25rem
    height .25rem
    right .1rem
}

#dashboard .list-group .list-group-item .list-last {
    border-bottom: none
}

#dashboard .list-group .list-group-item.my-service .icon-service {
    background: url(../../assets/tips/centerIcon.png) left center no-repeat
    background-size: .25rem .25rem
}

#dashboard .list-group .list-group-item.my-service .tel {
    display: inline;
    line-height: .46rem;
    color: #4e4e4e;
    font-size: .14rem
}

#dashboard .list-group .list-group-item.my-service .list-last {
    display: block;
    line-height: .25rem;
    padding: .1rem 0
}

#dashboard .logout {
    margin: .2rem
}

.btn.btn-primary {
    color: #fff;
    background: -webkit-linear-gradient(top, #ff874d, #ff5400);
    background: linear-gradient(to bottom, #ff874d, #ff5400);
    border: 1px solid #e64c00;
}
.btn.btn-block {
    display: block;
    margin: 0 auto .1rem;
    width: 100%;
}
.btn {
    padding: .5em 1em;
    font-size: .13rem;
    display: inline-block;
    text-align: center;
    text-decoration: none;
}