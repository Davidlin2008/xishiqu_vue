    .booking__modal {
        color: #666;
        font-size: .12rem;
        .list {
            padding: 0;
            marign: 0;
            list-style-position: inside;
            li {
                margin-bottom: .1rem;
            }
        }
    }
    .protection__modal {
        .list {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        .item {
            font-size: .12rem;
            color: #999;
            margin-bottom: .2rem;
            padding-left: .3rem;
            background-position: left top;
            background-repeat: no-repeat;
            background-size: .2rem;
            h6 {
                padding: 0;
                margin: 0;
                font-size: .12rem;
                color: #333;
                line-height: 1.5;
            }
        }
    }
    .protection__content {
        padding: .12rem .2rem;
        background: #F4F4F4;
        align-items: center;
        display: flex;
        color: #999;
        font-size: .1rem;
        .protection__icons {
            display: flex;
            flex: 1;
            text-align: center;
            .icon-display {
                padding-top: .43rem;
                flex: 1;
                background-position: top center;
                background-repeat: no-repeat;
                background-size: .35rem .35rem;
            }
        }
        .icon-angle-right {
            color: #cccccc;
            font-size: .14rem;
        }
    }

    .intro {
        color: #666;
        .series {
            margin-bottom: .1rem;
            padding: .1rem 0;
            overflow-x: auto;
            .swiper-wrapper {
                display: flex;
                justify-content: space-between;
                position: relative;
                &:before {
                    display: block;
                    width: 100%;
                    top: 50%;
                    content: '';
                    position: absolute;
                    border-top: 2px solid #F4F4F4;
                }
            }
            .swiper-slide {
                text-align: center;
                background: #F4F4F4;
                box-shadow: 0 2px 4px 0 rgba(0,0,0,0.10);
                border-radius: 50%;
                width: .45rem;
                height: .45rem;
                line-height: .45rem;
                z-index: 20;
                &.active {
                    background: #ff5400;
                    color: #fff;
                }
            }
        }

        .gallery {
            .title {
                text-align: center;
                margin: .2rem 0;
            }
            .swiper-slide {
                width: .75rem;
                margin-right: .1rem;
            }
        }
        .intro__content {
            margin-bottom: .1rem;
            overflow: hidden;
            position: relative;
            img {
                max-width: 100%;
                height: auto;
            }
        }
        .collapsed {
            .intro__content {
                max-height: 500px;
                &:after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 100%;
                    height: .4rem;
                    background-image: linear-gradient(180deg, rgba(255, 255, 255, 0),  rgba(255, 255, 255, 100) 100%);
                }
            }
        }
        .intro__toggle {
            color: #333;
            text-align: center;
            &:after {
                content: '';
                border: 5px solid transparent;
                border-top-color: #333;
                display: inline-block;
                margin-left: 5px;
                top: 3px;
                position: relative;
            }
        }
    }
    .remark {
        color: #999;
    }
    .qa {
        .item {
            border: 1px solid #efefef;
            padding: .2rem;
            border-radius: 4px;
            box-shadow: 0 2px 4px 0 rgba(0,0,0,0.05);
            .q {
                font-size: .14rem;
                font-weight: bold;
                margin-bottom: .1rem;
            }
            .a {
                color: #999;
                font-size: .12rem;
            }
        }
    }
    .comments {
        .more {
            color: #ff5400;
            text-align: center;
        }
    }
    .navigation {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background: #fff;
        border-bottom: 1px solid #efefef;
        display: flex;
        font-size: .14rem;
        z-index: 900;
        .item {
            flex: 1;
            padding: 0 .15rem;
            &.active .i {
                color: #ff5400;
                border-color: #ff5400;
            }
        }
        .i {
            display: block;
            height: .49rem;
            line-height: .49rem;
            text-align: center;
            border-bottom: 2px solid transparent;
        }

    }
    .page__footer {
        display: flex;
        position: fixed;
        bottom: 0;
        width: 100%;
        left: 0;
        border-top: 1px solid #eee;
        background: #fff;
        z-index: 800;
        .item {
            display: flex;
            justify-content: center;
            align-items: center;
            width: .6rem;
            height: .5rem;
        }
        .icon {
            color: #666;
            font-size: .24rem;
            line-height: 1;
            border-right: 1px solid #eee;
        }
        .icon-love {
            color: #ff5400;
        }
        .btn {
            padding: 0;
            font-size: .15rem;
            border-radius: 0;
            color: #fff;
            background-color: #faa235;
            flex: 1;
            &:last-child {
                background-color: #f86b26;
            }
        }
        .countdown {
            font-size: .1rem;
            background: #eee;
            color: #666;
            position: absolute;
            top: -.28rem;
            left: 0;
            width: 100%;
            height: .28rem;
            line-height: .28rem;
            text-align: center;
            .em {
                font-size: .12rem;
                color: #ff5400;
            }
        }
    }
}
