#activity {
    &.page {
        padding: 0 0 .5rem 0;
        background-color: #f4f4f4;
    }
    .page__header {
        .icon-dynshare {
            color: #333;
        }
    }
    .modal {
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, .6);
        .modal__dialog {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            background: #fff;
            top: auto;
            right: 0;
            border-radius: 0;
            border: none;
            .modal__title {
                font-size: .16rem;
                text-align: center;
                line-height: .49rem;
                color: #333;
            }
            .modal__content {
                padding: .2rem;
                border: none;
            }
        }
    }
    .share__modal {
        .wechat {
            color: #fff;
            padding: .2rem;
        }
        .modal__title {
            border-bottom: 1px solid #ddd;
        }
        .modal__content {
            display: flex;
            align-items: baseline;
            .item {
                flex: 1;
                display: flex;
                flex-direction: column;
                align-items: center;
                font-size: .12rem;
                .icon {
                    font-size: .3rem;
                }
                .icon-qq {
                    font-size: .25rem;
                    color: #01b3ef;
                }
                .icon-qq-zone {
                    color: #ffc028;
                }
                .icon-weibo {
                    color: #e6162d;
                }
            }
        }
    }
    .block-wrapper {
        background: #fff;
        padding: 0 .2rem;
        margin-bottom: .1rem;
    }
    .block {
        border-bottom: 1px solid #efefef;
        padding: 0;
        &:last-child {
            border-bottom: none;
        }
        .block__title {
            font-size: .16rem;
            font-weight: bold;
            color: #333;
            margin: 0;
            padding: .2rem 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            .more {
                font-weight: normal;
                font-size: .12rem;
                color: #999;
            }
            .btn {
                color: #fff;
                background-image: linear-gradient(45deg, #FFBA66 0%, #FF9966 100%);
                border-radius: 4px;
            }
        }
        .block__content {
            font-size: .14rem;
            padding-bottom: .2rem;
        }
    }
    .basic-info {
        display: flex;
        padding: .2rem;
        font-size: .14rem;
        line-height: 1.2;
        color: #fff;
        position: relative;
        overflow: hidden;
        .bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-repeat: no-repeat;
            background-size: 500%;
            background-position: center center;
            filter: blur(32px);
            z-index: 1;
        }
        .mask {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, .2);
            z-index: 5;
        }
        .thumbnail {
            width: 1rem;
            border-radius: 4px;
            margin-right: .2rem;
            position: relative;
            z-index: 10;
            .thumbnail__tag {
                position: absolute;
                top: -5px;
                left: 8px;
                padding: 4px 6px;
                // background: url(~static/activity/discount.png) no-repeat center top;
                background-size: .4rem .4rem;
                border-radius: 0 0 4px 4px;
                font-size: .1rem;
                span {
                    display: block;
                    font-size: .14rem;
                    letter-spacing: 1px;
                }
            }
            .thumbnail__img {
                width: 100%;
                height: auto;
                border-radius: 4px;
            }
        }
        .main {
            flex: 1;
            position: relative;
            z-index: 10;
        }
        .title {
            font-size: .16rem;
            line-height: 1.2;
            max-height: 2.4em;
            overflow: hidden;
            font-weight: bold;
            margin: 0 0 .1rem 0;
        }
        .date {
            margin-bottom: .1rem;
        }
        .heat {
            width: .88rem;
            margin-bottom: .1rem;
            position: relative;
            .heat__main {
                text-align: center;
                padding: .05rem .05rem .05rem .21rem;
                border-radius: 4px;
                // background: url(~static/activity/thermometer.png) 0.8rem center no-repeat;
                background-size: .13rem .25rem;
                background-color: rgba(255, 255, 255, .3);
                line-height: 1;
                span {
                    font-size: .1rem;
                }
            }
            .help {
                font-size: .1rem;
                border-radius: 50%;
                width: .2rem;
                height: .2rem;
                border: 1px solid #fff;
                border-radius: 50%;
                width: 16px;
                height: 16px;
                line-height: 15px;
                border: 1px solid #fff;
                display: block;
                text-align: center;
                position: absolute;
                right: -25px;
                bottom: 0;
            }
        }
        .price {
            font-size: .2rem;
            .sub {
                font-size: .1rem;
                display: inline-block;
            }
        }
    }
    .activity-info {
        background-color: #fff;
        padding: .1rem 0;
        .info-item {
            padding: .1rem .4rem .1rem .2rem;
            display: flex;
            justify-content: space-between;
            font-size: .14rem;
            color: #666;
            align-items: center;
            line-height: 1;
            position: relative;
            &.address {
                .text-content {
                    font-weight: bold;
                    font-size: .16rem;
                    display: flex;
                    align-items: flex-end;
                }
            }
            .text-content {
                font-size: .14rem;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
                width: 100%;
                .orange {
                    display: inline-block;
                    color: #ff5400;
                    margin-right: .03rem;
                    border-right: 1px solid #ff5400;
                    padding-right: .1rem;
                    margin-right: .1rem;
                }
            }
            .icon-marker {
                font-size: .19rem;
                margin-right: .06rem;
            }
            .icon-angle-right {
                position: absolute;
                right: .2rem;
                top: 50%;
                color: #cccccc;
                font-size: .14rem;
                transform: translateY(-50%);
                margin-top: -2px;
            }

        }
    }
